---
interface Props {
  title: string;
  date: Date;
  author: string;
  description?: string;
  tags?: string[];
}

const { title, date, author, description, tags = [] } = Astro.props;
const formattedDate = date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<div class="flex justify-center items-center w-full h-full p-4">
  <div
    class="w-full h-full bg-white rounded-xl drop-shadow-lg overflow-hidden font-sans border-2 border-gray-800"
  >
    <!-- Browser Header -->
    <div class="bg-gray-100 border-b border-gray-300 px-4 py-2">
      <div class="flex gap-2 mb-2">
        <div class="w-3 h-3 rounded-full border border-black/10 bg-red-500">
        </div>
        <div class="w-3 h-3 rounded-full border border-black/10 bg-yellow-500">
        </div>
        <div class="w-3 h-3 rounded-full border border-black/10 bg-green-500">
        </div>
      </div>
      <div class="flex gap-0.5"></div>
    </div>

    <!-- Browser Toolbar -->
    <div
      class="bg-gray-50 border-b border-gray-300 px-4 py-3 flex items-center gap-3"
    >
      <div class="flex gap-1">
        <button
          class="bg-gray-200 border border-gray-400 rounded px-2.5 py-1.5 cursor-pointer text-xs transition-all duration-200 hover:bg-gray-300"
          >‚óÄ</button
        >
        <button
          class="bg-gray-200 border border-gray-400 rounded px-2.5 py-1.5 cursor-pointer text-xs transition-all duration-200 hover:bg-gray-300"
          >‚ñ∂</button
        >
        <button
          class="bg-gray-200 border border-gray-400 rounded px-2.5 py-1.5 cursor-pointer text-xs transition-all duration-200 hover:bg-gray-300"
          >üîÑ</button
        >
      </div>
      <div
        class="flex-1 bg-white border border-gray-400 rounded-lg px-3 py-2 text-sm flex items-center gap-1"
      >
        <span class="text-gray-500">https://</span>
        <span class="text-blue-500 font-medium">ncashin.dev</span>
        <span class="text-gray-700"
          >/{title.toLowerCase().replace(/\s+/g, "-")}</span
        >
        <span class="text-xs">üîí</span>
      </div>
      <div
        class="bg-gray-200 border border-gray-400 rounded p-2 cursor-pointer text-base transition-all duration-200 hover:bg-yellow-400"
      >
        ‚≠ê
      </div>
    </div>

    <!-- Browser Content -->
    <div class="p-0">
      <article class="max-w-none m-0 p-0 font-sans">
        <header
          class="bg-gradient-to-br from-blue-500 to-purple-600 text-white p-6 flex items-center gap-4"
        >
          <div class="text-5xl drop-shadow-lg">üåê</div>
          <div class="flex-1">
            <h1 class="text-3xl font-bold m-0 mb-1 drop-shadow-lg">{title}</h1>
            <div class="text-sm opacity-90">ncashin.dev ‚Ä¢ {formattedDate}</div>
          </div>
        </header>

        <!-- Post Content -->
        <div class="content p-6">
          <slot />
        </div>
      </article>
    </div>

    <style>
      .content :global(h2) {
        @apply text-2xl my-8 mb-4 text-gray-800 border-b-2 border-blue-500 pb-2;
      }

      .content :global(p) {
        @apply my-4 text-base;
      }

      .content :global(code) {
        @apply bg-gray-50 px-1.5 py-0.5 rounded text-sm border border-gray-200;
      }

      .content :global(pre) {
        @apply bg-gray-50 p-4 rounded-lg overflow-x-auto my-4 border border-gray-200;
      }

      .content :global(blockquote) {
        @apply border-l-4 border-blue-500 pl-4 my-4 text-gray-600 italic bg-gray-50 py-3 px-4 rounded-r-lg;
      }

      .content :global(ul),
      .content :global(ol) {
        @apply my-4 pl-8;
      }

      .content :global(li) {
        @apply my-2;
      }

      .content :global(a) {
        @apply text-blue-500 no-underline border-b border-transparent transition-all duration-200;
      }

      .content :global(a:hover) {
        @apply border-blue-500 text-blue-700;
      }

      /* Responsive Design */
      @media (max-width: 768px) {
        .site-header {
          @apply flex-col text-center;
        }

        .site-actions {
          @apply mt-3;
        }

        .footer-links {
          @apply flex-col gap-2;
        }

        .site-footer {
          @apply flex-col gap-3 text-center;
        }
      }
    </style>
  </div>
</div>
