---
interface Props {
  title: string;
  date: Date;
  author: string;
  description?: string;
  tags?: string[];
}

const { title, date, author, description, tags = [] } = Astro.props;
const formattedDate = date.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<div class="browser-container">
  <div class="browser-window">
    <!-- Browser Header -->
    <div class="browser-header">
      <div class="browser-controls">
        <div class="control red"></div>
        <div class="control yellow"></div>
        <div class="control green"></div>
      </div>
      <div class="browser-tabs">
        <div class="tab active">
          <span class="tab-icon">üìÑ</span>
          <span class="tab-title">{title}</span>
        </div>
        <div class="tab">
          <span class="tab-icon">üè†</span>
          <span class="tab-title">Home</span>
        </div>
        <div class="tab">
          <span class="tab-icon">üìö</span>
          <span class="tab-title">Blog</span>
        </div>
      </div>
    </div>

    <!-- Browser Toolbar -->
    <div class="browser-toolbar">
      <div class="nav-buttons">
        <button class="nav-btn">‚óÄ</button>
        <button class="nav-btn">‚ñ∂</button>
        <button class="nav-btn">üîÑ</button>
      </div>
      <div class="address-bar">
        <span class="protocol">https://</span>
        <span class="domain">ncashin.dev</span>
        <span class="path"
          >/blog/{title.toLowerCase().replace(/\s+/g, "-")}</span
        >
        <span class="lock-icon">üîí</span>
      </div>
      <div class="bookmark-btn">‚≠ê</div>
    </div>

    <!-- Browser Content -->
    <div class="browser-content">
      <article class="blog-post">
        <header class="site-header">
          <div class="site-icon">üåê</div>
          <div class="site-info">
            <h1 class="site-title">{title}</h1>
            <div class="site-url">ncashin.dev ‚Ä¢ {formattedDate}</div>
          </div>
          <div class="site-actions">
            <button class="action-btn">üì§</button>
            <button class="action-btn">üíæ</button>
            <button class="action-btn">üñ®Ô∏è</button>
          </div>
        </header>

        <div class="site-links">
          <div class="link-item">
            <span class="link-icon">üë§</span>
            <span class="link-text">By {author}</span>
          </div>
          {
            tags.length > 0 && (
              <div class="link-item">
                <span class="link-icon">üè∑Ô∏è</span>
                <div class="link-tags">
                  {tags.map((tag) => (
                    <span class="link-tag">{tag}</span>
                  ))}
                </div>
              </div>
            )
          }
          {
            description && (
              <div class="link-item">
                <span class="link-icon">üìù</span>
                <span class="link-text">{description}</span>
              </div>
            )
          }
        </div>

        <div class="content">
          <slot />
        </div>

        <footer class="site-footer">
          <div class="footer-links">
            <a href="#" class="footer-link">üè† Home</a>
            <a href="#" class="footer-link">üìö Blog</a>
            <a href="#" class="footer-link">üë®‚Äçüíª About</a>
            <a href="#" class="footer-link">üìß Contact</a>
          </div>
          <div class="footer-status">
            <span class="status-icon">‚úÖ</span>
            <span class="status-text">Page loaded successfully</span>
          </div>
        </footer>
      </article>
    </div>
  </div>

  <style>
    .browser-container {
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      padding: 2rem;
    }

    .browser-window {
      width: 100%;
      max-width: 900px;
      background: white;
      border-radius: 12px;
      box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
      overflow: hidden;
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
        sans-serif;
    }

    /* Browser Header */
    .browser-header {
      background: #f5f5f5;
      border-bottom: 1px solid #ddd;
      padding: 8px 16px;
    }

    .browser-controls {
      display: flex;
      gap: 8px;
      margin-bottom: 8px;
    }

    .control {
      width: 12px;
      height: 12px;
      border-radius: 50%;
      border: 1px solid rgba(0, 0, 0, 0.1);
    }

    .control.red {
      background: #ff5f56;
    }
    .control.yellow {
      background: #ffbd2e;
    }
    .control.green {
      background: #27ca3f;
    }

    .browser-tabs {
      display: flex;
      gap: 2px;
    }

    .tab {
      background: #e0e0e0;
      padding: 8px 16px;
      border-radius: 6px 6px 0 0;
      display: flex;
      align-items: center;
      gap: 6px;
      font-size: 14px;
      cursor: pointer;
      transition: all 0.2s ease;
    }

    .tab.active {
      background: white;
      border-bottom: 2px solid #007aff;
    }

    .tab-icon {
      font-size: 16px;
    }

    .tab-title {
      max-width: 120px;
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
    }

    /* Browser Toolbar */
    .browser-toolbar {
      background: #f8f9fa;
      border-bottom: 1px solid #ddd;
      padding: 12px 16px;
      display: flex;
      align-items: center;
      gap: 12px;
    }

    .nav-buttons {
      display: flex;
      gap: 4px;
    }

    .nav-btn {
      background: #e9ecef;
      border: 1px solid #ced4da;
      border-radius: 4px;
      padding: 6px 10px;
      cursor: pointer;
      font-size: 12px;
      transition: all 0.2s ease;
    }

    .nav-btn:hover {
      background: #dee2e6;
    }

    .address-bar {
      flex: 1;
      background: white;
      border: 1px solid #ced4da;
      border-radius: 6px;
      padding: 8px 12px;
      font-size: 14px;
      display: flex;
      align-items: center;
      gap: 4px;
    }

    .protocol {
      color: #6c757d;
    }
    .domain {
      color: #007aff;
      font-weight: 500;
    }
    .path {
      color: #495057;
    }
    .lock-icon {
      font-size: 12px;
    }

    .bookmark-btn {
      background: #e9ecef;
      border: 1px solid #ced4da;
      border-radius: 4px;
      padding: 8px;
      cursor: pointer;
      font-size: 16px;
      transition: all 0.2s ease;
    }

    .bookmark-btn:hover {
      background: #ffd700;
    }

    /* Browser Content */
    .browser-content {
      padding: 0;
    }

    .blog-post {
      max-width: none;
      margin: 0;
      padding: 0;
      font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
        sans-serif;
    }

    /* Site Header */
    .site-header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 24px;
      display: flex;
      align-items: center;
      gap: 16px;
    }

    .site-icon {
      font-size: 48px;
      filter: drop-shadow(2px 2px 4px rgba(0, 0, 0, 0.3));
    }

    .site-info {
      flex: 1;
    }

    .site-title {
      font-size: 2rem;
      margin: 0 0 4px 0;
      font-weight: 700;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .site-url {
      font-size: 14px;
      opacity: 0.9;
    }

    .site-actions {
      display: flex;
      gap: 8px;
    }

    .action-btn {
      background: rgba(255, 255, 255, 0.2);
      border: 1px solid rgba(255, 255, 255, 0.3);
      border-radius: 6px;
      padding: 8px;
      color: white;
      cursor: pointer;
      font-size: 16px;
      transition: all 0.2s ease;
    }

    .action-btn:hover {
      background: rgba(255, 255, 255, 0.3);
      transform: translateY(-1px);
    }

    /* Site Links */
    .site-links {
      background: #f8f9fa;
      border-bottom: 1px solid #dee2e6;
      padding: 16px 24px;
    }

    .link-item {
      display: flex;
      align-items: center;
      gap: 12px;
      margin-bottom: 12px;
      padding: 8px 12px;
      background: white;
      border-radius: 8px;
      border: 1px solid #e9ecef;
      transition: all 0.2s ease;
    }

    .link-item:hover {
      border-color: #007aff;
      box-shadow: 0 2px 8px rgba(0, 122, 255, 0.1);
      transform: translateY(-1px);
    }

    .link-icon {
      font-size: 20px;
      width: 24px;
      text-align: center;
    }

    .link-text {
      color: #495057;
      font-size: 14px;
    }

    .link-tags {
      display: flex;
      gap: 6px;
      flex-wrap: wrap;
    }

    .link-tag {
      background: #e3f2fd;
      color: #1976d2;
      padding: 4px 8px;
      border-radius: 12px;
      font-size: 12px;
      font-weight: 500;
      border: 1px solid #bbdefb;
    }

    /* Content */
    .content {
      padding: 24px;
      line-height: 1.7;
      color: #333;
    }

    .content :global(h2) {
      font-size: 1.5rem;
      margin: 2rem 0 1rem;
      color: #333;
      border-bottom: 2px solid #007aff;
      padding-bottom: 8px;
    }

    .content :global(p) {
      margin: 1rem 0;
      font-size: 16px;
    }

    .content :global(code) {
      background: #f8f9fa;
      padding: 2px 6px;
      border-radius: 4px;
      font-size: 0.9em;
      border: 1px solid #e9ecef;
    }

    .content :global(pre) {
      background: #f8f9fa;
      padding: 16px;
      border-radius: 8px;
      overflow-x: auto;
      margin: 1rem 0;
      border: 1px solid #e9ecef;
    }

    .content :global(blockquote) {
      border-left: 4px solid #007aff;
      padding-left: 16px;
      margin: 1rem 0;
      color: #6c757d;
      font-style: italic;
      background: #f8f9fa;
      padding: 12px 16px;
      border-radius: 0 8px 8px 0;
    }

    .content :global(ul),
    .content :global(ol) {
      margin: 1rem 0;
      padding-left: 2rem;
    }

    .content :global(li) {
      margin: 0.5rem 0;
    }

    .content :global(a) {
      color: #007aff;
      text-decoration: none;
      border-bottom: 1px solid transparent;
      transition: all 0.2s ease;
    }

    .content :global(a:hover) {
      border-bottom-color: #007aff;
      color: #0056b3;
    }

    /* Site Footer */
    .site-footer {
      background: #f8f9fa;
      border-top: 1px solid #dee2e6;
      padding: 16px 24px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .footer-links {
      display: flex;
      gap: 16px;
    }

    .footer-link {
      color: #6c757d;
      text-decoration: none;
      font-size: 14px;
      display: flex;
      align-items: center;
      gap: 4px;
      transition: color 0.2s ease;
    }

    .footer-link:hover {
      color: #007aff;
    }

    .footer-status {
      display: flex;
      align-items: center;
      gap: 6px;
      font-size: 12px;
      color: #28a745;
    }

    .status-icon {
      font-size: 14px;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
      .browser-container {
        padding: 1rem;
      }

      .site-header {
        flex-direction: column;
        text-align: center;
      }

      .site-actions {
        margin-top: 12px;
      }

      .footer-links {
        flex-direction: column;
        gap: 8px;
      }

      .site-footer {
        flex-direction: column;
        gap: 12px;
        text-align: center;
      }
    }
  </style>
</div>
